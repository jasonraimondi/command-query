<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Jmondi\Gut\Entity\OAuth\OAuthAccessToken">
        <id name="identifier" type="string"/>

        <field name="isRevoked" type="boolean"/>
        <field name="expiresAt" type="datetime"/>
        <field name="createdAt" type="datetime"/>

        <many-to-one field="user" target-entity="Jmondi\Gut\Entity\User\User" fetch="EXTRA_LAZY">
            <join-column name="userId" referenced-column-name="id"/>
        </many-to-one>

        <many-to-one field="oAuthClient" target-entity="Jmondi\Gut\Entity\OAuth\OAuthClient" fetch="EXTRA_LAZY">
            <join-column name="oAuthClientId" referenced-column-name="identifier"/>
        </many-to-one>

        <many-to-many field="oAuthScopes" target-entity="Jmondi\Gut\Entity\OAuth\OAuthScope" >
            <cascade>
                <cascade-all/>
            </cascade>
            <join-table name="OAuthAccessTokenScope">
                <join-columns>
                    <join-column name="oAuthAccessTokenId" referenced-column-name="identifier" nullable="true"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="scopeId" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>

</doctrine-mapping>
