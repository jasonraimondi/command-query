{# @var actionClasses \Jmondi\Gut\Infrastructure\Describer\ApplicationReflectionClass[] #}
import { RestClientInterface } from '../RestClient/rest-client';

{% for action in actionClasses %}
import { {{ action.actionDomain }} } from './Action/{{ action.actionDomain | lowercaseFirst }}';
{% endfor %}

export class ActionFactory {
    constructor(private restClient: RestClientInterface) {}

    {% for action in actionClasses -%}
        public {{ action.actionDomain | lowercaseFirst }}() {
        return new {{ action.actionDomain }}(this.restClient);
    }
    {% endfor %}

}
